<Window x:Class="WinResSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:WinResSelector"
        mc:Ignorable="d"
        Title="WinResSelector" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#1A1A1A"
        Icon="/Resources/icon.ico">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#5865F2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4752C4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#2F3136"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </Window.Resources>

    <Border Padding="20" Background="#2F3136">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 当前分辨率显示 -->
            <Border Grid.Row="0" 
                    Background="#36393F" 
                    CornerRadius="8"
                    Padding="16,12" 
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="当前分辨率" 
                             Foreground="#B9BBBE" 
                             FontSize="12"
                             Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding CurrentResolution}" 
                             FontWeight="SemiBold" 
                             Foreground="#00B0F4"
                             FontSize="16"/>
                </StackPanel>
            </Border>

            <!-- 设置区域 -->
            <Border Grid.Row="1" 
                    Background="#36393F" 
                    CornerRadius="8"
                    Padding="16,12" 
                    Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="基本设置" 
                             Foreground="#B9BBBE" 
                             FontSize="12"
                             Margin="0,0,0,8"/>
                    <CheckBox Content="开机启动" 
                            IsChecked="{Binding StartWithWindows}"
                            Margin="0,4"/>
                    <CheckBox Content="最小化到托盘" 
                            IsChecked="{Binding MinimizeToTray}"
                            Margin="0,4"/>
                </StackPanel>
            </Border>

            <!-- 配置列表 -->
            <Border Grid.Row="2" 
                    Background="#36393F" 
                    CornerRadius="8"
                    Padding="16,12" 
                    Margin="0,0,0,16">
                <DockPanel>
                    <TextBlock Text="分辨率配置" 
                             Foreground="#B9BBBE" 
                             FontSize="12"
                             DockPanel.Dock="Top"
                             Margin="0,0,0,12"/>
                    <ListView ItemsSource="{Binding Profiles}"
                            Background="Transparent"
                            BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2F3136" 
                                        CornerRadius="4" 
                                        Padding="12,8" 
                                        Margin="0,4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                 Text="{Binding Id}" 
                                                 Foreground="White"
                                                 VerticalAlignment="Center" 
                                                 Margin="0,0,12,0" />

                                        <ComboBox Grid.Column="1"
                                                 ItemsSource="{Binding DataContext.AvailableResolutions, 
                                                           RelativeSource={RelativeSource AncestorType=Window}}"
                                                 SelectedItem="{Binding Display}"
                                                 Margin="0,0,12,0" />

                                        <Button Grid.Column="2" 
                                                Content="切换" 
                                                Width="60"
                                                Margin="0,0,8,0"
                                                Command="{Binding DataContext.TestProfileCommand, 
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />

                                        <Button Grid.Column="3" 
                                                Content="删除"
                                                Width="60"
                                                Background="#ED4245"
                                                Command="{Binding DataContext.DeleteProfileCommand, 
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- 底部按钮 -->
            <Button Grid.Row="3" 
                    Content="添加配置" 
                    HorizontalAlignment="Right"
                    Width="80"
                    Height="30"
                    Margin="0,10,0,0"
                    Command="{Binding AddProfileCommand}">
                <Button.Style>
                    <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                        <Setter Property="Padding" Value="0"/>
                    </Style>
                </Button.Style>
            </Button>

            <!-- 托盘图标 -->
            <tb:TaskbarIcon x:Name="NotifyIcon"
                            IconSource="/Resources/icon.ico"
                            ToolTipText="WinResSelector"
                            TrayLeftMouseDown="NotifyIcon_TrayLeftMouseDown">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu Background="#2F3136" BorderThickness="0">
                        <MenuItem Header="显示窗口" 
                                Command="{Binding ShowWindowCommand}"
                                Foreground="White" />
                        <Separator />
                        <ItemsControl ItemsSource="{Binding Profiles}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <MenuItem Header="{Binding Display}" 
                                            Foreground="White"
                                            Command="{Binding DataContext.TestProfileCommand, 
                                                      RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                                            CommandParameter="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Separator />
                        <MenuItem Header="退出" 
                                Command="{Binding ExitCommand}"
                                Foreground="White" />
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </Grid>
    </Border>
</Window>